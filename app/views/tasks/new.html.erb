<div class="container my-5">
  <%= link_to tasks_path, class: "btn btn-outline-secondary mb-4" do %>
    <i class="fas fa-arrow-left"></i> Retour à la liste
  <% end %>

  <div class="form-container">
    <h2 class="mb-4"><i class="fas fa-plus-circle"></i> Créer une nouvelle tâche</h2>

    <%= form_with model: @task do |form| %>
      <div class="mb-3">
        <%= form.label :title, "Titre", class: "form-label" %>
        <%= form.text_field :title, class: 'form-control', placeholder: "Ex: Faire les courses" %>
      </div>

      <div class="mb-3">
        <%= form.label :details, "Détails", class: "form-label" %>
        <%= form.text_area :details, class: 'form-control', rows: 5, placeholder: "Ajouter des détails..." %>
      </div>

      <div class="d-flex gap-2">
        <%= form.submit "Créer la tâche", class: 'btn btn-primary' %>
        <%= link_to "Annuler", tasks_path, class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>
